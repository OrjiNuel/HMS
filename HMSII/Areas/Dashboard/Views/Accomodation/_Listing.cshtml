@model HMSII.Areas.Dashboard.ViewModels.AccomodationListModel

@if (Model != null && Model.Accomodations != null && Model.Accomodations.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Accomodation Packages</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var accomodation in Model.Accomodations)
            {
                <tr>
                    <td>
                        @accomodation.Name
                    </td>
                    <td>
                        @accomodation.Description
                    </td>
                    <td>
                        @if(accomodation.AccomodationPackage != null)
                        {
                            @accomodation.AccomodationPackage.Name
                        }
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "Accomodation", new { ID = accomodation.ID })" type="button" class="data-btn btn btn-success" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-pen mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete", "Accomodation", new { ID = accomodation.ID })" type="button" class="data-btn btn btn-danger" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-trash-can mr-1"></i>Delete</button>
                    </td>
                </tr>

            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No records exist.
    </div>
}
